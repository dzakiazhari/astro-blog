---
import type { Page } from "astro";
import type { CollectionEntry } from "astro:content";
import IconArrowLeft from "@/assets/icons/IconArrowLeft.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import LinkButton from "./LinkButton.astro";
import Shell from "./Shell.astro";

export interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { page } = Astro.props;
const hasPagination = page.lastPage > 1;
---

<Shell as="div" data-shell-slot="pagination" padding="tight">
  {hasPagination ? (
    <nav aria-label="Pagination" class="flex justify-center">
      <div class="flex items-center gap-2 text-[color:var(--muted-text)] uppercase">
        <LinkButton
          disabled={!page.url.prev}
          href={page.url.prev as string}
          class:list={[{ "opacity-40": !page.url.prev }]}
          ariaLabel="Previous"
          prefetch="hover"
        >
          <IconArrowLeft class="inline-block size-[1rem] rtl:rotate-180" />
          Prev
        </LinkButton>
        <span class="type-overline-tight inline-flex min-w-[2.9rem] justify-center font-semibold text-[color:var(--muted-text)]/80">
          {page.currentPage} / {page.lastPage}
        </span>
        <LinkButton
          disabled={!page.url.next}
          href={page.url.next as string}
          class:list={[{ "opacity-40": !page.url.next }]}
          ariaLabel="Next"
          prefetch="hover"
        >
          Next
          <IconArrowRight class="inline-block size-[1rem] rtl:rotate-180" />
        </LinkButton>
      </div>
    </nav>
  ) : (
    <div aria-hidden="true" class="pagination-placeholder"></div>
  )}
</Shell>
