---
import IconHash from "@/assets/icons/IconHash.svg";

export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
}

const { tag, tagName, size = "sm" } = Astro.props;
---

<li class="my-1 me-1 inline-block">
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "inline-flex items-center gap-1 rounded-full border bg-muted/60 px-2 py-1 text-foreground",
      "border-accent/30 hover:bg-accent/10 focus-visible:outline-2 focus-visible:outline-dashed focus-visible:outline-accent",
      size === "sm" ? "text-xs" : "text-sm px-3 py-1.5",
    ]}
  >
    <IconHash class:list={["inline-block opacity-80 text-accent", size === "sm" ? "size-3" : "size-4"]} />
    <span>{tagName}</span>
  </a>
</li>
