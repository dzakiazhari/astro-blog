---
import IconHash from "@/assets/icons/IconHash.svg";

export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
}

const { tag, tagName, size = "sm" } = Astro.props;
---

<li class="my-1 me-1 inline-block">
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "inline-flex items-center gap-1.5 rounded-full border border-border/60 bg-background/90 px-3 py-1 text-foreground/80 shadow-sm transition duration-150 ease-out",
      "hover:border-accent/40 hover:text-accent focus-visible:ring-2 focus-visible:ring-accent/40 focus-visible:outline-none",
      size === "sm"
        ? "text-[0.65rem] font-semibold tracking-[0.28em] uppercase"
        : "px-3.5 py-1.5 text-xs font-semibold tracking-[0.24em] uppercase",
    ]}
  >
    <IconHash
      class:list={[
        "inline-block text-accent/80 transition",
        size === "sm" ? "size-3" : "size-4",
      ]}
    />
    <span>{tagName}</span>
  </a>
</li>
