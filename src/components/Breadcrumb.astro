---
// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path
// eg: /tags/tailwindcss => ['tags', 'tailwindcss']
const breadcrumbList = currentUrlPath.split("/").slice(1);

// if breadcrumb is Home > Posts > 1 <etc>
// replace Posts with Posts (page number)
if (breadcrumbList[0] === "posts") {
  breadcrumbList.splice(0, 2, `Posts (page ${breadcrumbList[1] || 1})`);
}

// if breadcrumb is Home > Tags > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
if (breadcrumbList[0] === "tags" && !isNaN(Number(breadcrumbList[2]))) {
  breadcrumbList.splice(
    1,
    3,
    `${breadcrumbList[1]} ${Number(breadcrumbList[2]) === 1 ? "" : "(page " + breadcrumbList[2] + ")"}`
  );
}
---

<nav
  class="site-shell mt-1.5 mb-0.5 text-[0.54rem] font-semibold tracking-[0.2em] text-[color:var(--muted-text)] uppercase"
  aria-label="Breadcrumb"
>
  <ol class="flex flex-wrap items-center gap-0.5">
    <li>
      <a
        href="/"
        class="inline-flex items-center gap-0.5 rounded-[var(--radius-sm)] border border-[var(--border-soft)] bg-[var(--surface-subtle)] px-1.5 py-0.5 transition-colors duration-150 hover:border-[color:var(--border-strong)] hover:text-[color:var(--nav-text-strong)]"
        data-astro-prefetch="hover"
      >
        Home
      </a>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) => (
        <li
          class="inline-flex items-center gap-1.5"
          aria-current={
            index + 1 === breadcrumbList.length ? "page" : undefined
          }
        >
          <span aria-hidden="true" class="text-[color:var(--muted-text)]/60">
            /
          </span>
          {index + 1 === breadcrumbList.length ? (
            <span class:list={["capitalize", { lowercase: index > 0 }]}>
              {decodeURIComponent(breadcrumb)}
            </span>
          ) : (
            <a
              href={`/${breadcrumb}/`}
              class="inline-flex items-center gap-0.5 rounded-[var(--radius-sm)] border border-[var(--border-soft)] bg-[var(--surface-subtle)] px-1.5 py-0.5 transition-colors duration-150 hover:border-[color:var(--border-strong)] hover:text-[color:var(--nav-text-strong)]"
              data-astro-prefetch="hover"
            >
              {breadcrumb}
            </a>
          )}
        </li>
      ))
    }
  </ol>
</nav>
