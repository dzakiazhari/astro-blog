---
import Hr from "./Hr.astro";
import Shell from "./Shell.astro";
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();
---

<footer class="w-full mt-auto" data-shell-slot="footer">
  <Hr noPadding />
  <Shell as="div">
    <div
      class="flex flex-col items-center justify-between gap-3 py-3.5 md:flex-row md:items-end"
    >
      <div
        class="type-overline-tight font-semibold text-[color:var(--muted-text)] uppercase"
      >
        &copy; {currentYear} All rights reserved.
      </div>
      <Socials centered />
    </div>
  </Shell>
</footer>
