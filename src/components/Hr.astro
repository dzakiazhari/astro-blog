---
import Shell from "./Shell.astro";

export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<Shell padding={noPadding ? "none" : "tight"}>
  <div
    class="h-px w-full bg-gradient-to-r from-transparent via-[color:var(--divider-soft)] to-transparent"
    aria-hidden={ariaHidden}
  >
  </div>
</Shell>
