---
import { SOCIALS } from "@/constants";
import LinkButton from "./LinkButton.astro";

export interface Props {
  centered?: boolean;
}

const { centered = false } = Astro.props;
---

<div
  class:list={[
    "flex flex-wrap justify-center gap-1",
    { "sm:justify-start": !centered },
  ]}
>
  {
    SOCIALS.map(social => (
      <LinkButton
        href={social.href}
        class="border-transparent px-2 py-2 text-foreground/70 transition-transform duration-150 hover:-translate-y-0.5 hover:text-accent sm:px-1"
        title={social.linkTitle}
        target="_blank"
      >
        <social.icon class="inline-block size-6 fill-transparent stroke-current stroke-2 opacity-90" />
        <span class="sr-only">{social.linkTitle}</span>
      </LinkButton>
    ))
  }
</div>
