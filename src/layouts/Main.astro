---
import Breadcrumb from "@/components/Breadcrumb.astro";
import { SITE } from "@/config";

interface StringTitleProp {
  pageTitle: string;
  pageDesc?: string;
}

interface ArrayTitleProp {
  pageTitle: [string, string];
  titleTransition: string;
  pageDesc?: string;
}

export type Props = StringTitleProp | ArrayTitleProp;

const { props } = Astro;

const backUrl = SITE.showBackButton ? Astro.url.pathname : "/";
---

<Breadcrumb />
<main data-backUrl={backUrl} id="main-content" class="site-shell pb-16">
  <section
    class="rounded-xl border border-border/60 bg-background/75 px-6 py-10 shadow-[0_22px_60px_rgba(22,18,44,0.12)] backdrop-blur-sm"
  >
    {
      "titleTransition" in props ? (
        <h1 class="text-[2rem] font-semibold tracking-[0.18em] text-foreground uppercase sm:text-[2.3rem]">
          {props.pageTitle[0]}
          <span
            transition:name={props.titleTransition}
            class="ms-2 inline-block text-accent"
          >
            {props.pageTitle[1]}
          </span>
        </h1>
      ) : (
        <h1 class="text-[2rem] font-semibold tracking-[0.18em] text-foreground uppercase sm:text-[2.3rem]">
          {props.pageTitle}
        </h1>
      )
    }
    {
      props.pageDesc && (
        <p class="mt-4 max-w-2xl text-sm leading-relaxed text-foreground/65 sm:text-base">
          {props.pageDesc}
        </p>
      )
    }
    <div class="mt-8 flex flex-col gap-8">
      <slot />
    </div>
  </section>
</main>

<script>
  document.addEventListener("astro:page-load", () => {
    const mainContent: HTMLElement | null =
      document.querySelector("#main-content");
    const backUrl = mainContent?.dataset?.backUrl;
    if (backUrl) {
      sessionStorage.setItem("backUrl", backUrl);
    }
  });
</script>
