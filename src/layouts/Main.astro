---
import Breadcrumb from "@/components/Breadcrumb.astro";
import { SITE } from "@/config";

interface StringTitleProp {
  pageTitle: string;
  pageDesc?: string;
}

interface ArrayTitleProp {
  pageTitle: [string, string];
  titleTransition: string;
  pageDesc?: string;
}

export type Props = StringTitleProp | ArrayTitleProp;

const { props } = Astro;

const backUrl = SITE.showBackButton ? Astro.url.pathname : "/";
---

<Breadcrumb />
<main data-backUrl={backUrl} id="main-content" class="site-shell pb-16">
  <section
    class="rounded-[var(--radius-lg)] border border-[var(--border-soft)] bg-[var(--surface-raised)] px-6 py-10"
  >
    {
      "titleTransition" in props ? (
        <h1 class="text-[1.9rem] font-semibold tracking-[0.22em] text-[color:var(--nav-text-strong)] uppercase sm:text-[2.2rem]">
          {props.pageTitle[0]}
          <span
            transition:name={props.titleTransition}
            class="ms-2 inline-block text-[color:var(--nav-text)]"
          >
            {props.pageTitle[1]}
          </span>
        </h1>
      ) : (
        <h1 class="text-[1.9rem] font-semibold tracking-[0.22em] text-[color:var(--nav-text-strong)] uppercase sm:text-[2.2rem]">
          {props.pageTitle}
        </h1>
      )
    }
    {
      props.pageDesc && (
        <p class="mt-4 max-w-2xl text-sm leading-relaxed text-[color:var(--muted-text)] sm:text-base">
          {props.pageDesc}
        </p>
      )
    }
    <div class="mt-8 flex flex-col gap-8">
      <slot />
    </div>
  </section>
</main>

<script>
  document.addEventListener("astro:page-load", () => {
    const mainContent: HTMLElement | null =
      document.querySelector("#main-content");
    const backUrl = mainContent?.dataset?.backUrl;
    if (backUrl) {
      sessionStorage.setItem("backUrl", backUrl);
    }
  });
</script>
