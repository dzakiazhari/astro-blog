---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'

const contacts = [
  {
    href: 'mailto:contact@dzakiazhari.com',
    label: 'Email',
    icon: 'lucide:mail',
  },
  {
    href: 'https://github.com/dzakiazhari',
    label: 'GitHub',
    icon: 'lucide:github',
    external: true,
  },
  {
    href: 'https://www.linkedin.com/in/dzakiazhari/',
    label: 'LinkedIn',
    icon: 'lucide:linkedin',
    external: true,
  },
]

---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" description={`About ${SITE.title}`} />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:info' }]} />

  <section class="space-y-12">
    <article class="space-y-4">
      <h1 class="text-4xl font-semibold tracking-tight text-balance">
        {SITE.title}
      </h1>
      <div class="space-y-4 text-muted-foreground leading-relaxed">
        <p>
          Hi, I’m {SITE.author}, an IT infrastructure specialist based in Japan.
        </p>
        <p>
          This site is my long-form blog. All views are my own and don’t
          represent any organization.
        </p>
      </div>
    </article>

    <section class="space-y-4">
      <h2 class="text-muted-foreground text-sm font-semibold tracking-[0.3em] uppercase">
        Feel free to connect
      </h2>
      <ul class="space-y-2">
        {
          contacts.map((contact) => (
            <li>
              <Link
                href={contact.href}
                external={contact.external}
                class="group inline-flex items-center gap-3 text-sm font-medium text-primary transition-colors duration-200 hover:text-primary/80"
              >
                <span class="inline-flex items-center gap-2 text-foreground">
                  <Icon name={contact.icon} class="text-primary size-4" />
                  {contact.label}
                </span>
                <Icon
                  name="lucide:arrow-up-right"
                  class="text-muted-foreground size-4 transition-transform duration-200 group-hover:translate-x-1 group-hover:-translate-y-1"
                />
              </Link>
            </li>
          ))
        }
      </ul>
    </section>
  </section>
</Layout>
