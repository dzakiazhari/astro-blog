---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'

const contacts = [
  {
    href: 'mailto:contact@dzakiazhari.com',
    label: 'Email',
    icon: 'lucide:mail',
  },
  {
    href: 'https://dzakiazhari.com',
    label: 'Website',
    icon: 'lucide:globe-2',
    external: true,
  },
  {
    href: 'https://github.com/dzakiazhari',
    label: 'GitHub',
    icon: 'lucide:github',
    external: true,
  },
  {
    href: 'https://www.linkedin.com/in/dzakiazhari/',
    label: 'LinkedIn',
    icon: 'lucide:linkedin',
    external: true,
  },
]

const highlights = [
  {
    title: 'Day job',
    description:
      'IT infrastructure specialist helping a Japan-based team keep systems resilient and predictable.',
  },
  {
    title: 'What I publish',
    description:
      'Long-form notes that bridge infrastructure lessons, digital gardening experiments, and personal retrospectives.',
  },
  {
    title: 'Guiding values',
    description:
      'Clarity over cleverness, automation that respects people, and writing that leaves breadcrumbs for future me.',
  },
]
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" description={`About ${SITE.title}`} />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:info' }]} />

  <section class="flex flex-col gap-y-12">
    <article
      class="border-primary/5 bg-muted/20 rounded-xl border p-8 shadow-sm backdrop-blur-sm"
    >
      <div class="flex flex-col gap-6 sm:flex-row sm:items-start">
        <span
          class="border-primary/20 bg-primary/15 text-primary flex size-14 shrink-0 items-center justify-center rounded-lg border"
        >
          <Icon name="lucide:user-round" class="size-7" />
        </span>
        <div class="flex flex-col gap-4">
          <h1 class="text-4xl font-semibold tracking-tight text-balance">
            {SITE.title}
          </h1>
          <p class="text-muted-foreground leading-relaxed">
            Hi, I'm {SITE.author}, an IT infrastructure specialist living in
            Japan. I keep networks dependable for the day job and document the
            experiments, wins, and lessons I pick up along the way.
          </p>
          <p class="text-muted-foreground leading-relaxed">
            This site is the long-form home for those notes. Everything here
            reflects my own perspective, distilled for future projects and
            anyone traveling a similar path.
          </p>
        </div>
      </div>
    </article>

    <section class="grid gap-6 sm:grid-cols-2">
      {
        highlights.map((highlight) => (
          <article class="border-primary/5 bg-background/80 hover:border-primary/30 rounded-lg border p-6 shadow-sm transition-transform duration-200 hover:-translate-y-1 hover:shadow-md">
            <h2 class="text-muted-foreground text-sm font-semibold tracking-[0.3em] uppercase">
              {highlight.title}
            </h2>
            <p class="text-foreground/90 mt-3 text-base leading-relaxed">
              {highlight.description}
            </p>
          </article>
        ))
      }
    </section>

    <section
      class="border-primary/5 bg-background/80 rounded-xl border p-6 shadow-sm"
    >
      <h2
        class="text-muted-foreground text-sm font-semibold tracking-[0.3em] uppercase"
      >
        Let's connect
      </h2>
      <ul class="mt-4 grid gap-3 sm:grid-cols-2">
        {
          contacts.map((contact) => (
            <li>
              <Link
                href={contact.href}
                external={contact.external}
                class="group border-border bg-muted/10 hover:border-primary/50 hover:bg-primary/5 flex items-center justify-between gap-3 rounded-lg border px-4 py-3 text-sm font-medium transition-colors duration-200"
              >
                <span class="text-foreground flex items-center gap-2">
                  <Icon name={contact.icon} class="text-primary size-4" />
                  {contact.label}
                </span>
                <Icon
                  name="lucide:arrow-up-right"
                  class="text-muted-foreground size-4 transition-transform duration-200 group-hover:translate-x-1 group-hover:-translate-y-1"
                />
              </Link>
            </li>
          ))
        }
      </ul>
    </section>
  </section>
</Layout>
