---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Shell from "@/components/Shell.astro";
import { SITE } from "@/config";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <Shell
    as="main"
    id="main-content"
    class="flex flex-1 items-center justify-center"
  >
    <div class="mb-14 flex flex-col items-center justify-center">
      <h1 class="text-9xl font-bold text-accent">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p
        class="type-heading-lg mt-4 font-semibold text-[color:var(--body-text)]"
      >
        Page Not Found
      </p>
      <LinkButton
        href="/"
        class="my-6 underline decoration-dashed underline-offset-8"
      >
        Go back home
      </LinkButton>
    </div>
  </Shell>

  <Footer />
</Layout>
