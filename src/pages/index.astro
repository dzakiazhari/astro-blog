---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main
    id="main-content"
    data-layout="index"
    class="mx-auto w-full max-w-app px-4 pt-14 pb-20 sm:pt-16"
  >
    <section id="hero" class="pb-12">
      <div class="flex flex-wrap items-center gap-3">
        <h1 class="text-4xl font-semibold text-foreground sm:text-5xl">
          Hello.
        </h1>
        <a
          target="_blank"
          href="/rss.xml"
          class="inline-flex items-center justify-center rounded-full border border-accent/40 bg-accent/10 p-2 text-accent transition hover:border-accent/60 hover:bg-accent/15 focus-visible:ring-2 focus-visible:ring-accent/60 focus-visible:outline-none"
          aria-label="rss feed"
          rel="noopener noreferrer"
          title="RSS Feed"
        >
          <IconRss
            width={18}
            height={18}
            class="stroke-current rtl:-rotate-90"
          />
          <span class="sr-only">RSS Feed</span>
        </a>
      </div>
      <p class="mt-6 max-w-2xl text-lg leading-relaxed text-foreground/80">
        Explore insights and growth on this <strong>blog</strong> or dive into my
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="https://notes.dzakiazhari.com"
          ><strong>&lt;/notes&gt;</strong></LinkButton
        > archive.
      </p>

      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <section id="lists" class="pt-6">
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2">
        {
          featuredPosts.length > 0 && (
            <div>
              <h2 class="mb-5 border-s-4 border-accent/70 ps-3 text-2xl font-semibold tracking-wide text-foreground">
                Featured
              </h2>
              <ul class="flex flex-col gap-4">
                {featuredPosts.slice(0, 3).map(data => (
                  <Card variant="h3" showDescription={false} {...data} />
                ))}
              </ul>
            </div>
          )
        }

        {
          recentPosts.length > 0 && (
            <div>
              <h2 class="mb-5 border-s-4 border-accent/70 ps-3 text-2xl font-semibold tracking-wide text-foreground">
                Recent Posts
              </h2>
              <ul class="flex flex-col gap-4">
                {recentPosts.slice(0, 3).map(data => (
                  <Card variant="h3" showDescription={false} {...data} />
                ))}
              </ul>
            </div>
          )
        }
      </div>
    </section>

    <div class="my-8 text-center">
      <LinkButton href="/posts/" prefetch="viewport">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
