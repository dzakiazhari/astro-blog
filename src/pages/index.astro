---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SOCIALS } from "@/constants";
import { SITE } from "@/config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main
    id="main-content"
    data-layout="index"
    class="site-shell space-y-12 pt-16 pb-20"
  >
    <section
      class="rounded-[var(--radius-lg)] border border-[var(--border-soft)] bg-[var(--surface-raised)] px-6 py-12 shadow-[0_30px_80px_rgba(32,26,20,0.22)] backdrop-blur"
    >
      <div
        class="grid gap-8 md:grid-cols-[minmax(0,1fr)_minmax(260px,0.9fr)] md:items-start"
      >
        <div class="space-y-5">
          <p
            class="text-[0.7rem] font-semibold tracking-[0.32em] text-[color:var(--muted-text)] uppercase"
          >
            Welcome traveler
          </p>
          <h1
            class="text-4xl font-semibold text-[color:var(--nav-text-strong)] sm:text-[2.75rem]"
          >
            Hello, I'm Dzaki.
          </h1>
          <p
            class="max-w-2xl text-base leading-relaxed text-[color:var(--muted-text)] sm:text-lg"
          >
            Explore stories, research notes, and the studio's experiments. When
            you're ready to wander further, the garden awaits with deeper
            threads and living documentation.
          </p>
          <div class="flex flex-wrap gap-3">
            <LinkButton href="/posts/" prefetch="viewport">
              Latest posts
              <IconArrowRight class="size-4 rtl:-rotate-180" />
            </LinkButton>
            <LinkButton href="/about" prefetch="viewport">
              About the studio
            </LinkButton>
          </div>
        </div>

        <div class="grid-equal grid gap-4 sm:grid-cols-2">
          <a
            href={SITE.notesUrl ?? "https://notes.dzakiazhari.com"}
            class="group relative flex min-h-[180px] flex-col justify-between overflow-hidden rounded-[var(--radius-md)] border border-[var(--border-soft)] bg-[var(--surface-subtle)] p-5 text-left shadow-[0_20px_50px_rgba(28,22,16,0.18)] transition-transform duration-200 hover:-translate-y-[2px] hover:border-[color:var(--border-strong)] hover:shadow-[0_26px_64px_rgba(24,18,12,0.24)] focus-visible:ring-2 focus-visible:ring-[color:var(--ring-accent)] focus-visible:outline-none"
            rel="noopener noreferrer"
            target="_blank"
            data-astro-prefetch="false"
          >
            <span
              class="text-[0.68rem] font-semibold tracking-[0.3em] text-[color:var(--muted-text)] uppercase"
            >
              Notes garden
            </span>
            <span
              class="text-2xl leading-snug font-semibold text-[color:var(--nav-text-strong)]"
            >
              View the evergreen notes â†—
            </span>
            <span
              class="pointer-events-none absolute inset-0 -z-[1] bg-[radial-gradient(circle_at_top_left,rgba(125,197,137,0.22),transparent_65%)] transition-opacity duration-200 group-hover:opacity-90"
            ></span>
          </a>

          <a
            href="/rss.xml"
            class="group flex min-h-[180px] flex-col justify-between rounded-[var(--radius-md)] border border-[var(--border-soft)] bg-[var(--surface-raised)] p-5 text-left shadow-[0_20px_50px_rgba(28,22,16,0.16)] transition-transform duration-200 hover:-translate-y-[2px] hover:border-[color:var(--border-strong)] hover:shadow-[0_26px_64px_rgba(24,18,12,0.22)] focus-visible:ring-2 focus-visible:ring-[color:var(--ring-accent)] focus-visible:outline-none"
            aria-label="rss feed"
            rel="noopener noreferrer"
            title="RSS Feed"
          >
            <span
              class="text-[0.68rem] font-semibold tracking-[0.3em] text-[color:var(--muted-text)] uppercase"
            >
              Stay updated
            </span>
            <span
              class="text-2xl leading-snug font-semibold text-[color:var(--nav-text-strong)]"
            >
              Subscribe via RSS
            </span>
            <span
              class="mt-auto inline-flex items-center gap-2 text-[0.68rem] font-semibold tracking-[0.26em] text-[color:var(--nav-text)] uppercase transition-colors duration-150 group-hover:text-[color:var(--nav-text-strong)]"
            >
              Feed
              <IconRss width={18} height={18} class="rtl:-rotate-90" />
            </span>
          </a>
        </div>
      </div>

      {
        SOCIALS.length > 0 && (
          <div class="mt-9 flex flex-wrap items-center gap-4 border-t border-[var(--divider-soft)] pt-6">
            <span class="text-[0.66rem] tracking-[0.3em] text-[color:var(--muted-text)] uppercase">
              Connect
            </span>
            <Socials />
          </div>
        )
      }
    </section>

    <section class="grid gap-10 md:grid-cols-2">
      {
        featuredPosts.length > 0 && (
          <div class="space-y-5">
            <h2 class="text-[0.78rem] font-semibold tracking-[0.28em] text-[color:var(--muted-text)] uppercase">
              Featured
            </h2>
            <ul class="grid gap-6">
              {featuredPosts.slice(0, 3).map(data => (
                <Card variant="h3" showDescription={false} {...data} />
              ))}
            </ul>
          </div>
        )
      }

      {
        recentPosts.length > 0 && (
          <div class="space-y-5">
            <h2 class="text-[0.78rem] font-semibold tracking-[0.28em] text-[color:var(--muted-text)] uppercase">
              Recent Posts
            </h2>
            <ul class="grid gap-6">
              {recentPosts.slice(0, 3).map(data => (
                <Card variant="h3" showDescription={false} {...data} />
              ))}
            </ul>
          </div>
        )
      }
    </section>

    <div class="flex justify-center">
      <LinkButton href="/posts/" prefetch="viewport">
        View archive
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
