---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold text-accent sm:my-8 sm:text-5xl">
        Hello.
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
        />
        <span class="sr-only">RSS Feed</span>
      </a>
      <p>
        Explore insights and growth on this <strong>blog</strong> or dive into my
        <LinkButton
          class="hover:text-skin-accent underline decoration-dashed underline-offset-4"
          href="https://notes.dzakiazhari.com"
          ><strong>&lt;/notes&gt;</strong></LinkButton
        > archive.
      </p>

      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <section id="lists" class="pt-10 pb-10">
      <div class="grid grid-cols-1 gap-10 md:grid-cols-2">
        {featuredPosts.length > 0 && (
          <div>
            <h2 class="mb-4 text-2xl font-semibold tracking-wide text-accent border-s-4 border-accent ps-3">
              Featured
            </h2>
            <ul class="flex flex-col gap-4">
              {featuredPosts.slice(0, 3).map(data => (
                <Card variant="h3" showDescription={false} {...data} />
              ))}
            </ul>
          </div>
        )}

        {recentPosts.length > 0 && (
          <div>
            <h2 class="mb-4 text-2xl font-semibold tracking-wide text-accent border-s-4 border-accent ps-3">
              Recent Posts
            </h2>
            <ul class="flex flex-col gap-4">
              {recentPosts.slice(0, 3).map(data => (
                <Card variant="h3" showDescription={false} {...data} />
              ))}
            </ul>
          </div>
        )}
      </div>
    </section>

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
