{
  "name": "astro-paper",
  "type": "module",
  "version": "5.5.0",
  "scripts": {
    "dev": "astro dev --host 0.0.0.0 --port 4321",
    "build": "astro check && astro build && pagefind --site dist && cp -r dist/pagefind public/",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "test": "pnpm run test:unit && pnpm run test:visual",
    "test:unit": "pnpm astro sync && pnpm exec tsc --project tsconfig.test.json && node --test --import ./tools/register-test-alias.mjs .tmp/test-build/utils/*.test.js && rm -rf .tmp/test-build",
    "test:visual": "playwright test",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "dependencies": {
    "@astrojs/react": "^4.4.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@giscus/react": "^3.1.0",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "^5.12.0",
    "astro-expressive-code": "^0.41.3",
    "dayjs": "^1.11.13",
    "lodash.kebabcase": "^4.1.1",
    "mdast-util-to-string": "^4.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.15.2",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.11",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@pagefind/default-ui": "^1.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/lodash.kebabcase": "^4.1.9",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.3.0",
    "pagefind": "^1.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  }
}
